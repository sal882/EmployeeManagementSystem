@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "All Department";
}

@if (TempData["Message"] is not null)
{
    <div id="msgAppear" class="row alert alert-success justify-content-between align-items-center">
        <p>@TempData["Message"]</p>
        <button type="button" id="closeBtn" class="btn-close" aria-label="Close"></button>
    </div>
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create"class="btn btn-primary">Create New Department</a>

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row offset-1 col-8">
        <div class="col-8">
            <input type="text" class="form-control" placeholder="Depatment Search Name.." name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Code)</th>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.DateOfCreation.Date)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <partial name="_BtnView" model="@department.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>There is No Department To Display !!!</h3>
    </div>
}

