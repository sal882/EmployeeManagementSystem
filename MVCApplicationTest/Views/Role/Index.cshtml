@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-action="Create" class="btn-primary btn">Create New Role</a>

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row offset-1 col-8">
        <div class="col-8">
            <input type="text" class="form-control" placeholder="Employee Search Email.." name="names" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.Id)</th>
                <th>@Html.DisplayNameFor(u => u.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M=> user.Id)</td>
                    <td>@Html.DisplayFor(M=> user.RoleName)</td>
                    <partial name="_BtnView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>There is No Roles To Display !!!</h3>
    </div>
}

