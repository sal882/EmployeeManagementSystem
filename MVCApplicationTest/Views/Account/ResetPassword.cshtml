@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Reset Password</h1>
<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword" method="post">
            <input class="text" asp-for="NewPassword" placeholder="Enter Your New Password" required="">
            <input class="text" asp-for="ConfirmPassword" placeholder="Confirm Your Password" required="">
            
            <input type="submit" value="Reset Passowrd">
        </form>
    </div>
</div>
@section validationScriptSection{
    @*<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>*@
        <partial name="_ValidationScriptsPartial" />
}


